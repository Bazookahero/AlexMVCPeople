@model Person;
@{
    ViewData["Title"] = "PeopleDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details page</h1>

        <dl>
        <dt>Name</dt>
        <dd>@Model.FirstName @Model.LastName</dd>
        <dt>Location</dt>
        <dd>@Model.Location.CityName</dd>
        <dt>Age</dt>
        <dd>@Model.Age</dd>
        <dt>Languages</dt>
        @foreach(Language lang in Model.Languages){
            <dd>@lang.LanguageName</dd>
        }
        </dl>
<a asp-controller="People" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
